---
import Header from '../components/home/partials/Header.astro'
import Layout from '../layouts/Layout.astro';
import Canvas  from '../components/home/3d/Canvas.jsx';
---

<Layout title="Mediumn">
	<Header />
	<main>
		<h1>
			MEDIUMN<span>.dev</span>
		</h1>
		<p>The modern blog for Angular Developers</p>
		<div class="badge">
			by <a href="https://github.com/johngualteros">john.dev</a>
		</div>
	</main>
	<div class="container-moon">
		<Canvas client:load/>
	</div>
</Layout>

<style>
	@import url('https://fonts.googleapis.com/css2?family=Nova+Square&family=Roboto:wght@300;400;900&display=swap');
	main {
		width: 100%;
		height: 100vh;
		display: flex;
		align-items: center;
		justify-content: center;
		flex-direction: column;
	}
	h1 {
		font-family: 'Nova Square', sans-serif;
		font-size: 7rem;
		color: #f9f4da;
		margin-bottom: 20px;
	}

	span {
		color: #008BFF;
		font-family: 'Roboto', sans-serif;
		font-weight: 900;
		font-size: 5rem;
	}

	p {
		font-family: 'Roboto', sans-serif;
		font-weight: 300;
		font-size: 1.5rem;
		color: #f9f4da;
	}

	.badge {
		background-color: #1a1a1a;
		padding: 10px 20px;
		border-radius: 5px;
		margin-top: 20px;
		color: #fff;
		> a {
			color: #008BFF;
		}
	}

	.container-moon {
		height: 100vh;
	}
</style>